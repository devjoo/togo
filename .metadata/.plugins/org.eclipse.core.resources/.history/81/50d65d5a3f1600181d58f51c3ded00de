package fileIO;

import java.io.BufferedReader;
import java.io.FileReader;

public class InputTest {

	//사용자 정보를 불러오기
	//불러온 정보를 화면에 출력
	private void testInput() {
		
		//파일입력 나마람ㄹ말
		fileReader fr = null;
		BufferedReader br = null;
		
		try {
			//지정된 경로의 파일을 찾아옴
			fr = new FileReader("C:\\Users\\Administrator\\leejiwoo\\@temp\\");
			//찾아온 파일을 읽는걸 보조.
			br = new BufferedReader(fr);
			
			//읽어온 줄을 저장할 변수 str
			String str = null;
			//찾아낸 파일은 몇줄이 적혀있을지 알수 없음
			//끝까지 읽으려면 => 반복 : while을 이용한 반복
			
			//while을 돌면서 br을 통해 읽어낸 문장을 바로 str에 저장
			//추가로 저장된 str이 null인지 아닌지 확인
			// => 파일을 다 읽어서 더 읽을 내용이 없다면str에 nullwjwkd
			// => str이 null이라면 끝까지 다 읽었다
			// ※ br에 담긴 파일을 끝까지 읽자 => 읽은 줄은 str에 저장
			while((str = br.readLine()) != null) {
				System.out.println(str);
			}
		} catch (Exception e) {
			// TODO: handle exception
		}
		
		

	}
}
